{{#if loggedIn}}
<div class="card-group">
    <div class="card">
        <div class="card-body">
            <p>
            <h2 class="card-title">{{username}}</h2>
            <h5><span> User # {{id}}:</span>What trails do you want to look up today?</h5>
            </p>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <form class="form login-form">
                <label for='state' style="color: white;"><small>Choose a State to Explore its Natural Resources</small></label>
                {{#unless state}}
                <input type='text' name='state' id='state' placeholder='Enter a State'>
                {{else}}
                <input type='text' name='state' id='state' placeholder={{state}}>
                {{/unless}}
                <button class="btn btn-secondary" type="submit">Start your Voyage</button>
            </form>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="dropdown">
             <label for="activitiesBtn">Or, search for
                        parks according to what you want to do: </label>
                <button class="btn btn-secondary dropdown-toggle" type="button" id="activitiesBtn"
                    data-bs-toggle="dropdown">
                    Select an Activity
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    {{#each activities as |act|}}
                    <button id={{act.id}} class="dropdown-item"
                        onclick="getParksByActivity(event)">{{act.name}}</button>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="dropdown">
               <label for="activitiesBtn">Or, search for
                        parks according to topics of interest: </label>
                <button class="btn btn-secondary dropdown-toggle" type="button" id="activitiesBtn"
                    data-bs-toggle="dropdown">
                    Select a Topic
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    {{#each topics as |topic|}}
                    <button id={{topic.id}} class="dropdown-item"
                        onclick="getParksByTopic(event)">{{topic.name}}</button>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    {{#if stateParks}}
    <div class="card">
        <div class="card-body">
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton"
                    data-bs-toggle="dropdown">
                    {{state}} Parks
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    {{#each stateParks as |park|}}
                    <button id={{park.parkCode}} class="dropdown-item"
                        onclick="getParkInfo(event)">{{park.fullName}}</button>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>
{{>continue-voyage-partials}}

{{#if thingsToDo}}
{{>things-modal-partials}}
{{/if}}
